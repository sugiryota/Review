<%=render "shared/header"%>
<div class='main'>
        <div class="user-item">
          <div class="user-nick">
            <%="#{@user.nickname}の投稿" %> 
          </div>  
          <div class="follow">
            <%if user_signed_in?%>
            <%unless @user == current_user%>
              <% if current_user.following?(@user)%>
                <%=button_to "フォローを解除する",relationship_path,method: :delete ,class: "fllowig-btn" %>
              <%else%>
                <%= form_for(@user.followers.build) do |f| %>
                  <%= hidden_field_tag :follow_id, @user.id %>
                  <%= f.submit "フォローする" ,class: "follow-btn" %>
                <% end %>
              <%end%>
            <%end%>
            <%end%> 
            <p class="follow-count">
              <%= link_to "#{@user.followers.count} #{User.human_attribute_name("フォロー中")}", followings_user_path %> <%= link_to "#{@user.followings.count} #{User.human_attribute_name("フォロワー")}", followers_user_path %>
            </p> 
          </div>     
        </div>
           
        <div class='item-contents'>
          <h2 class='title'>Pick Up</h2>
          <div class="subtitle" >
            user reviews
          </div>
          <ul class='item-lists'>
      
            <%@user.items.page(params[:page]).per(16).each do |item|%>
            <li class='list'>
              <%= link_to item_path(item.id),class:"link" do %>
              <div class='item-img-content'>
                
                <%if item.image.attached? %>
                  <%= image_tag item.image, class: "item-img"  %>
                <%else%>
                  <%= image_tag 'soundreview2.png', class: "item-img"  %>
                <%end%>  
              </div>
              <div class='item-info'>
                
                <%= item.name%>
                
              </div>
              
              
              <% end %>
            </li>
            
            <%end%>
            <%= paginate @user.items.page(params[:page]).per(16) %>
          </ul>
          <h2 class='title'>Pick Up</h2>
          <div class="subtitle" >
            user good review
          </div>
          
          <ul class='item-lists'>
      
            <%@user.like_items.page(params[:page]).per(16).each do |post|%>
            <li class='list'>
              <%= link_to item_path(post.id),class:"link" do %>
              <div class='item-img-content'>
                
                <%if post.image.attached? %>
                  <%= image_tag post.image, class: "item-img"  %>
                <%else%>
                  <%= image_tag 'soundreview2.png', class: "item-img"  %>
                <%end%>  
              </div>
              <div class='item-info'>
                
                <%= post.name%>
                
              </div>
              
              
              <% end %>
              
            </li>
          
            <% end %>
          </ul>
          <%= paginate @user.like_items.page(params[:page]).per(16) %>
        </div> 
          
</div>




 <%= render "shared/footer" %>
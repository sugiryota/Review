<h1><%= t("フォロワー") %></h1>

<table>
  <% @followers.each do |user| %>
    <tr>
      <td>
        <% if user.image.attached? %>
          <%= image_tag user.image.variant(resize_to_limit: [30, 30]) %>
        <% end %>
      </td>
      <td><%= link_to user.nickname, user_path(user) %></td>
      
    </tr>
  <% end %>
</table>

<%= link_to t("button.back"), user_path %>
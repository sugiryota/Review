<%=render "shared/header"%>
<div class='main'>
  <div class="ranking-title">
      <h1>グットレビューランキング</h1>
         
  </div>
  <div class="rank-container">
    <div class='item-contents'>
      <h2 class='title'>Pick Up</h2>
      <div class="subtitle" >
        top good reviews
      </div>
    </div>
    <% lastFavorite = 0 %>
    <% j=1 %>
    <% @ranks.each.with_index(1) do |item, i| %>
      <%if i==1 %>
        <%lastFavorite = item.likes.count %>
      <%end%>  
      <%if item.likes.count != lastFavorite%>
        <% j=i %>
        <div class="rank-box">
    
        
              <ul class='rank-lists'>
                <div class="ranks">
                  <li class="rank">
                    <%= j %>位  
                  </li>
                  <li class="good-count">
                    いいね数：<%=item.likes.count%>
                  </li>
              
                </div>  
                <li class='list'>
            
                  <%= link_to item_path(item.id),class:"link" do %>
                  <div class='item-img-content'>
                
                    <%if item.image.attached? %>
                      <%= image_tag item.image, class: "item-img"  %>
                    <%else%>
                      <%= image_tag 'soundreview2.png', class: "item-img"  %>
                   <%end%>  
                  </div>
                  <div class='item-info'>
                
                    <%= item.name%>
                
                  </div>
              
              
                  <% end %>
                </li>
           
              </ul>
          <%lastFavorite = item.likes.count%>
        </div>
      <%else%>
      <%lastFavorite = item.likes.count%>
      <div class="rank-box">
    
        
          <ul class='rank-lists'>
            <div class="ranks">
              <li class="rank">
                <%= j %>位  
              </li>
              <li class="good-count">
                いいね数：<%=item.likes.count%>
              </li>
              
            </div>
            <li class='list'>
            
              <%= link_to item_path(item.id),class:"link" do %>
              <div class='item-img-content'>
                
                <%if item.image.attached? %>
                  <%= image_tag item.image, class: "item-img"  %>
                <%else%>
                  <%= image_tag 'soundreview2.png', class: "item-img"  %>
                <%end%>  
              </div>
              <div class='item-info'>
                
                <%= item.name%>
                
              </div>
              
              
              <% end %>
            </li>
           
          </ul>
      <%end%>   
      </div>    
    <% end %>
  </div>
</div>  
<%=render "shared/footer"%>